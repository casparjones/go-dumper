BACKUP_DIR=./backups

# Basic Authentication for local development
ADMIN_USER=admin
ADMIN_PASS=password123

# MySQL/MariaDB connection for testing (used by integration tests)
MYSQL_DSN=testuser:testpass@tcp(localhost:3306)/testdb